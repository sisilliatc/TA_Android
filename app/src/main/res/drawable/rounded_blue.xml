<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    // The width and color of the border
    <stroke
        android:width="2dp"
        android:color="	#f6f6f6" />
    <stroke android:color="	#137ed9" android:width="3dp" />

    // The desired corner radius. reduce it to keep it less rounded
    <gradient
        android:startColor="#eeeeee"
        android:endColor="#e4e8ea"
        android:angle="90">
    </gradient>

    // Add your desired padding
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"    >
    </padding>
    <corners android:radius="18dip"/>

</shape>